<% layout('boilerplate') -%>

  <div class="container">
    <h2>Create an Account</h2>
    <form action="/signup" method="POST">
      <label for="email">Email</label>
      <input required type="email" id="email" name="email" placeholder="user@example.com" />

      <label for="password">Password</label>
      <input required type="password" id="password" name="password" placeholder="Enter password" />

      <label for="confirmPassword">Confirm Password</label>
      <input required type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" />

      <button type="submit" class="signup">Sign Up</button>
    </form>
    <p>Already have an account? <a href="/login" class="login-link">Login here</a></p>
  </div>
